<main class="bg-gray-100 flex items-center justify-center min-h-screen" >
  <div class="w-full max-w-md bg-white shadow-md rounded-lg p-6" data-controller="login">
    <h2 class="text-2xl font-bold mb-6 text-center">Login</h2>
    <form data-login-target="form" data-action="submit->login#submit">

      <!-- Email Field -->
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
          Email
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" name="email" placeholder="Email" data-login-target="email">
      </div>

      <!-- Password Field -->
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
          Password
        </label>
        <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" name="password" placeholder="Password" data-login-target="password">
      </div>


      <!-- Submit Button -->
      <div class="flex items-center justify-between">
        <button class="bg-sky-500 hover:bg-sky-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
          Login
        </button>
      </div>
    </form>
    <div class="mt-4">
      <button data-action="click->login#redirectToSignup" class="text-blue-500 hover:underline">Sign up</button>
    </div>
  </div>
</main>

